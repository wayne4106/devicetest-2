<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hmr.devtest" >

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/test"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainTest"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SensorTest"
            android:label="@string/title_activity_sensor_test"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".DisplayInfo"
            android:label="@string/title_activity_display_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TouchTest"
            android:label="@string/title_activity_touch_test"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".OrientationTest"
            android:label="@string/title_activity_orientation_test"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor">
        </activity>
    </application>

</manifest>
